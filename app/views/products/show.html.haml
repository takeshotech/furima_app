.wrapper
  %header
    .header-lnner
      .main-header
        = link_to "#" do
          = image_tag 'logo.png', alt: 'logo', height: '40.55', width: '140px', class: 'icon'
        %input.searchbox{name: "key",placeholder: "キーワードから探す",type: "text"}
        %button{type: "submit"}
          .search-box__icon
            = image_tag 'icon serch.svg', alt: 'seach', height: '19.77px', width: '19.77', class: 'image'
      .nav
        %ul.listsleft
          %li.listsleft-first__item
            .catBtn
              = link_to  "カテゴリー", "#", { :id => "category-btn"}    
          %li.listsleft-second__item
            .brandBtn
              = link_to "#" do
                ブランド
        %ul.listsright
          %li.listsright-first__item
            = link_to "#" do
              ログイン
          %li.listsright-second__item
            = link_to "#" do
              新規登録
  %nav.breadCrumbs
    %ul.ul
      %li.li
        = link_to "#" do
          FURIMA
      %li.li
        = icon('fa', 'angle-right',class: 'i')
      %li.li
        = link_to "/" do
          ベビー・キッズ
      %li.li
        = icon('fa', 'angle-right',class: 'i')
      %li.li
        = link_to "#" do
          ベビー服(男女兼用) ~95cm
      %li.li
        = icon('fa', 'angle-right',class: 'i')
      %li.li
        = link_to "#" do
          アウター
      %li.li
        = icon('fa', 'angle-right',class: 'i')    
  .show-main
    .item-box
      .item-name__box  
        .item-name
          %h1 バレンシアガ財布
        .item-wording
          %p バレンシアガの財布の赤。機能性の高いミニ財布  
      .item-main    
        .item-img
          = image_tag 'IMG_2664.jpg', alt: 'img', height: '360px', width: '360px'
        .item-table    
          .table-box
            %table 
              %tr 
                %th 出品者
                -# %td= @user.nickname
              %tr 
                %th カテゴリー
                %td
                  -#= link_to "#{@category_parent.name}","#"
                  -#%br= link_to "#{@category_child.name}","#"
                  -#= link_to "#{@category_grandchild.name}","#"
            %table
              %tr
                %th 
                  カテゴリー
                  %td 
                    = link_to '#' do
                      商品のカテゴリー
            %table
              %tr
                %th 
                  ブランド
                  %td 
                    = link_to '#' do
                      商品のブランド    
            %table
              %tr
                %th 商品のサイズ
                %td サイズ        
            %table
              %tr
                %th 商品の状態
                %td 状態
            %table
              %tr
                %th 発送の方法
                %td 方法    
            %table
              %tr
                %th 発送料の負担
                %td 負担者
            %table
              %tr
                %th 発送元地域
                %td 発送元
            %table
              %tr
                %th 発送日数
                %td 日数
      .item-price__box
        .item-price
          %span ¥40000     
        .item-buy__btn
          .item-buy
            購入画面
      .item-description__inner
        %p こちらは、一年前に青山のバレンシアガで購入したので確実に本物です。正規店でのメンテナンスを受けられる確実に本物・正規品ですのでご安心ください。大切に使用していましが中古品なので神経質な方はご遠慮願います。状態などご不明な点がございましたらお気軽にお問い合わせください
    .commentBox
      .comment-body
        %textarea
        .noticeMsg
          %p 
            相手のことを考え丁寧なコメントを心がけましょう。
            %br
            不快な言葉遣いなどは利用制限や退会処分となることがあります。
        .commentBtn    
          %button{type: "submit",class: "btn"}
            = icon('fa', 'comment',class: 'icon')
            コメントする
    %ul.links 
      %li
        = link_to "#" do
          = icon('fa', 'angle-left',class: 'ii')
          %span 前の商品
      %li.links-right
        = link_to "#" do
          %span 後ろの商品
          = icon('fa', 'angle-right',class: 'ii')
    .relatedItems
      .relatedItems-top
        = link_to "#" do
          商品をもっと見る
        .productlists
          .productlist
            = link_to "#" do
              = image_tag 'IMG_2653.jpg', alt: 'image-2', height: '150px', width: '220px', class: 'product-img'
              .product-list__body
                %h3.name
                  財布
                .deta-list
                  %ul.items-price
                    %li 
                      1000円
                    %li
                      = icon('fa', 'star likeIcon',class: 'iii')
                      0
                  %p (税込)
                  .actions
        -# = link_to '削除',"/products/#{@product.user_id}",method: :delete
  .third-banner
    .catch-copy
      %p.text-small
        だれでもかんたん、人生を変えるフリマアプリ
      %p.text-big
        今すぐ無料ダウンロード！
    .download-btn
      = link_to "#" do
        = image_tag("apple.svg", class: 'a-btn')
      = link_to "#" do
        = image_tag("google-play-badge.svg", class: 'g-btn')
      
  .t-footer
    .t-footer__contents
      .content
        %h2.content__title
          FURIMAについて
        %ul
          %li
            = link_to "会社概要 （運営会社）", "#"
          %li
            = link_to "プライバシーポリシー", "#"
          %li
            = link_to "FURIMA利用規約", "#"
          %li
            = link_to "ポイントに関する特約", "#"
      .content
        %h2.content__title
          FURIMAを見る
        %ul
          %li
            = link_to "カテゴリ一覧", "#"
          %li
            = link_to "ブランド一覧", "#"
      .content
        %h2.content__title
          ヘルプ＆ガイド
        %ul
          %li
            = link_to "FURIMAガイド", "#"
          %li
            = link_to "FURIMAロゴ利用ガイドライン", "#"
          %li
            = link_to "お知らせ", "#"
    .t-footer__logo
      = link_to "#" do
        = image_tag "logo-white.svg"
      %p.t-footer__copylight 
        © FURIMA
  = link_to "#" do
    .camera-btn
      %span.camera-btn__text 出品する
      = image_tag("icon_camera.png", class: 'camera-btn__icon')
