.wrapper
  .t-header
    .t-header__up
      .t-header__logo
        %h1.icon
          = link_to "/" do
            = image_tag "logo.svg"
        .t-header__search
          .form
            %input{type: "text", placeholder:"キーワードから探す"}
            %button{type: "submit", class:'search_btn'}
              .t-header__search-icon
                =image_tag "icon-search 1.png"
      .t-header__under
        %ul.left-side
          カテゴリー
          %li.left-side__item.list-side__item-category
          - @parents.each do |parent|
            = link_to "#{parent.name}", categories_path(parent), class: "parent_category", id: "#{parent.id}"
          .children_list
          .grand_children_list
          %li.left-side__item
            = link_to "ブランド", "#", { :id => "brand-btn"}
        %ul.right-side
          %li.right-side__item.right-side__item-login
            = link_to "ログイン", "#", { :id => "login-btn"}
          %li.right-side__item
            = link_to "新規会員登録", "#", { :id => "new-btn"}

  .first-banner
    .first-banner__content
      %h2.catch-copy
        %br
          人生を変えるフリマアプリ
        %p.text-small
          FURIMAはだれでもかんたんに出品・購入できる
          %br
          フリマアプリです
      .download-btn
        = link_to "#", class: 'a-btn' do
          = image_tag "apple.svg"
        = link_to "#", class: 'g-btn' do
          = image_tag "google-play-badge.svg"
  .choice-point
    %h2.title
      FURIMAが選ばれる3つの理由
    %ul.points
      %li.point
        .point__image
          %span.number 1 
          = image_tag "pict-reason-01.jpg"    
        %h3.description-title
          %span 3分
          ですぐに出品
        %p.description-text
          スマホで入力するだけで簡単に出品できる！
      %li.point
        .point__image
          %span.number 2
